#:::::::::::::::::::::::::::: Config default ::::::::::::::::::::::::::::::::::#

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym odiaeresis resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


#::::::::::::::::::::::::::::::: Out system :::::::::::::::::::::::::::::::::::#

# reload the configuration file
bindsym $mod+Shift+w reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit
# turn off computer
bindsym $mod+Shift+p exec --no-startup-id systemctl poweroff

# Set shut down, restart and locking features
bindsym $mod+Shift+o mode "$mode_system"
set $mode_system (e)xit, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym s exec --no-startup-id systemctl suspend
    bindsym e exec --no-startup-id exit
    bindsym h exec --no-startup-id systemctl hibernate
    bindsym r exec --no-startup-id systemctl reboot
    bindsym Shift+s exec --no-startup-id systemctl poweroff

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}



#:::::::::::::::::::::::::::::::: i3 Panel ::::::::::::::::::::::::::::::::::::#


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    output eDP1
    output DP1
    status_command i3status --config ~/.config/i3/i3status.conf
    position top
    i3bar_command i3bar -t

    tray_output eDP1
        bindsym button4 nop
        bindsym button5 nop
        font pango: xos4 Terminus,Icons 9
        strip_workspace_numbers yes
        separator_symbol 	"⡇"

    colors {
    background #00000000
    statusline #999999
    separator  #999999

    focused_workspace  #00000000 #00000000 #860000
    active_workspace   #00000000 #00000000 #860000
    inactive_workspace #00000000 #00000000 #860000
    urgent_workspace   #94242c #94242c #ffffff
    
  }
}

